@model IEnumerable<ProjetoModeloDDD.Presentation.ViewModels.BookViewModel>

@{
    ViewBag.Title = "Livros";
}

<h2>Livros</h2>

<p>
    @Html.ActionLink("Novo Livro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Isbn)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.BookId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.BookId }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.BookId })
        </td>
    </tr>
}

</table>
